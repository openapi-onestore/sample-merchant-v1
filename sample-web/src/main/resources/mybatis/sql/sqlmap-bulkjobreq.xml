<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bulkJobRequest">
	<resultMap id="bulkJobRequestMap" type="map">
		<result property="mid" column="mid" />
		<result property="status" column="status" />
		<result property="reason" column="reason" />
		<result property="waitingJob" column="waiting_jobs" />
		<result property="jobId" column="job_id" />
		<result property="uploadFile" column="upload_file" />
		<result property="uploadDate" column="upload_date" />
		<result property="verifyMessage" column="verify_message" />
	</resultMap>

	<select id="selectBulkJobRequest" resultMap="bulkJobRequestMap">
		SELECT * FROM BULK_JOB_REQUEST
	</select>
	
	<insert id="insertBulkJobRequest" parameterType="map">
		INSERT INTO BULK_JOB_REQUEST VALUES(default, #{status}, #{reason}, #{waiting_jobs}, #{job_id}, #{upload_file}, #{upload_date}, 'not yet')
	</insert>
	
	<update id="updateNotificationVerify" parameterType="map">
		UPDATE 
			BULK_JOB_REQUEST
		SET
			VERIFY_MESSAGE = #{verifyResult}
		WHERE
			JOB_ID = #{jobId}
	</update>
	
</mapper>